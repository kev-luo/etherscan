<!DOCTYPE html>
<html lang="en">
<%- include('./partials/_head.ejs') %>
<body>
  <%- include('./partials/_nav.ejs') %>
  
  <section class="section">
    <div class="container">
      <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th>Ethereum Address</th>
            <th>Searched Date</th>
          </tr>
        </thead>
        <tbody>
          <% if(searches.length>0) { %>
            <% searches.forEach(search => { %>
              <tr>
                <td><a href="/display/<%= search.address %>"><%= search.address%></a></td>
                <td><time datetime="<%= search.createdAt %>"><%= search.createdAt.toLocaleDateString() %> <%= search.createdAt.toLocaleTimeString() %></time></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>
</body>
</html>